<h1>Books</h1>

 <table>
   <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th clospan="3"></th>
   </tr>
  </thead>

  <% @books.each do |book| %><!--@books(book.all)からeachした内容をbook(ブロック変数)に入れている-->
  <tbody>
   <tr>
    <td><%= book.title %></td><!--3行目のeachしてbook(ブロック変数)に入れた内容のtitleを表示する-->
    <td><%= book.body %></td><!--3行目のeachしてbook(ブロック変数)に入れた内容のbodyを表示する-->
    <td> <%= link_to "Show",book_path(book.id) %></td><!--3行目のeachしてbook(ブロック変数)に入れた内容のidのShowにリンクする-->
    <td> <%= link_to "Edit",edit_book_path(book.id) %></td><!--3行目のeachしてbook(ブロック変数)に入れた内容のidのeditにリンクする-->
    <td><%= link_to "Destroy",destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
   </tr>
  </tbody>
  <% end %>
 </table>


<h2>New Book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>error prohibited this book from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>

 <div class="field">
　 <label for="book_title">Title</label>
　 <%= f.text_field :title %>
 </div>
 
 <div class="field">
　 <label for="book_body">Body</label>
　 <%= f.text_area :body %>
 </div>
 
  <div class="actions">
   <%= f.submit 'Create Book' %>
  </div>
<% end %>